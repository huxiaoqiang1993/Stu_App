<!--pages/view/view.wxml-->
<!-- 1、view的基本用法 -->
<view class="box">hello word</view>
<view>你好小强</view>

<!-- 2、hover-class：当用户按下时，显示的样式 -->
<view class='box1' hover-class='hover-view' hover-start-time="{{0}}" hover-stay-time="{{0}}">box1</view>

<!-- 3、 -->
<view class='box2' hover-class="box2-hover">
  <view class='box1' hover-class='hover-view' hover-start-time="{{0}}" hover-stay-time="{{0}}" hover-stop-propagation>box1</view>
</view>